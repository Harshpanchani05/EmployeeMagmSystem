@using EmployeeMagmSystem_EMS_.ViewModels;
@model ChangePasswordViewModel;

@{
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Recover Password (v2)</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a class="h1"><b>Admin</b>LTE</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">You are only one step a way from your new password, recover your password now.</p>
                <form method="post" asp-action="ChangePassword">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="input-group mb-3">
                        <input asp-for="Email" class="form-control" hidden>

                    </div>
                    <div class="mb-3">
                            <div class="input-group mb-0">
                            <input id="password" type="password" asp-for="NewPassword" class="form-control" placeholder="Password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span id="open" class="fas fa-eye" style="cursor:pointer"></span>
                                    <span id="closed" class="fas fa-eye-slash" style="cursor:pointer"></span>
                                </div>
                            </div>
                             </div>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                   
                    <div class="mb-3">
                            <div class="input-group mb-0">
                            <input id="Confirmpassword" type="password" asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm Password">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span id="open1" class="fas fa-eye" style="cursor:pointer"></span>
                                        <span id="closed1" class="fas fa-eye-slash" style="cursor:pointer"></span>
                                    </div>
                                </div>
                            </div>
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Change password</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <p class="mt-3 mb-1">
                    <a asp-action="Login" asp-controller="Account">Login</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    @* <script src="../../plugins/jquery/jquery.min.js"></script> *@

    <partial name="_ValidationScriptsPartial" />
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>
    <!-- Password Hide and Show -->
    <script src="~/js/passwordhideshow.js"></script>
</body>
</html>
